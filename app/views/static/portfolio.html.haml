= render 'shared/breadcrumbs', data: nil
.container
  .row
    .col-lg-12
      - [@projects.first].each do |project|
        .blog-item
          .row
            .col-lg-12.col-sm-12
              %center
                %h1
                  = link_to project[:title], project[:url], target: '_blank', id: 'current-title-link'
          .row
            .col-lg-2
            .col-lg-8
              .blog-img.well
                %a{href: project[:url], target: '_blank', id: 'current-project-url'}
                  = image_tag "portfolio/#{project[:image]}", alt: "Screenshot of #{project[:title]}" , id: 'current-poject-image'
          .row
            .col-lg-5
            .col-lg-2
              .blog-side-item
                %strong.tags
                  - if project[:case_study]
                    %ul.list-unstyled.tagg
                      %li= link_to "Case study", project[:case_study], target: "_blank", id: 'current-case-study'

          .row
            .col-md-12
              %p{id: 'current-description'}= raw project[:description]

  .row
    - @projects.each do |project|
      .col-lg-3.well.card-well.portifolio-card{data: {title: project[:title], url: project[:url], description: project[:description], 'case-study' => project[:case_study], url: project[:url], image: "assets/portfolio/#{project[:image]}"}}
        .blog-img{id: project[:title]}
          %a{href: project[:url], target: '_blank'}
            = image_tag "portfolio/#{project[:image]}", alt: "Screenshot of #{project[:title]}"
        .row
          %center
            .blog-item.card-item
              %h1
                = link_to project[:title], project[:url], target: '_blank'
      .col-lg-1


