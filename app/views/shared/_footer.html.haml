      .text-center.footer_nav_links
        = link_to 'Home', root_path
        |
        = link_to 'Open Source', 'open-source'
        |
        = link_to 'Portfolio', 'portfolio'
        |
        = link_to 'Clients', root_path
        |
        = link_to 'Testimonials', 'testimonials'
        |
        = link_to 'Blog', 'http://blog.joshsoftware.com/', target: "_blank"
        |
        = link_to 'Team', 'team'
        |
        = link_to 'Contact Us', 'contact-us'
    .row
